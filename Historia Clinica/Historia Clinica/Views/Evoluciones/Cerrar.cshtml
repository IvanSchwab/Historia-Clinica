@model Historia_Clinica.Models.Evolucion

@{
    ViewData["Title"] = "Cerrar";
}

<link rel="stylesheet" href="~/css/controladores.css" asp-append-version="true" />


<h1>¿Desea cerrar la evolucion?</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cerrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" hidden>
                <label asp-for="NotaId" class="control-label"></label>
                <input asp-for="NotaId" class="form-control" />
                <span asp-validation-for="NotaId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DescripcionAtencion" class="control-label"></label>
                <input asp-for="DescripcionAtencion" class="form-control" />
                <span asp-validation-for="DescripcionAtencion" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FechaYHoraInicio" class="control-label"></label>
                <input asp-for="FechaYHoraInicio" class="form-control" />
                <span asp-validation-for="FechaYHoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FechayHoraAlta" class="control-label"></label>
                <input asp-for="FechayHoraAlta" class="form-control" />
                <span asp-validation-for="FechayHoraAlta" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FechayHoraCierre" class="control-label"></label>
                <input asp-for="FechayHoraCierre" class="form-control" />
                <span asp-validation-for="FechayHoraCierre" class="text-danger"></span>
            </div>
            <div class="form-group form-check"hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoAbierto" /> @Html.DisplayNameFor(model => model.EstadoAbierto)
                </label>
            </div>
            <div class="form-group" style="margin-right:-900px">
                <a asp-action="Index" class="btn btn-primary btn-lg">Regresar a Lista</a>
                <button type="submit" value="Cerrar Evolucion" class="btn btn-danger btn-lg">Cerrar Evolución</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
