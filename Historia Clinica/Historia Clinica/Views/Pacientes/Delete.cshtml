@model Historia_Clinica.Models.Paciente

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/controladores.css" asp-append-version="true" />

<h1>Eliminar</h1>

<h3>¿Desea descartar al siguiente Paciente?</h3>
<hr />
<div class="row" >
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoObraSocial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoObraSocial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
            <dd class="col-sm-10">
                <a href="mailto:@Model.Email" style="color: blue; text-decoration: underline;">@Model.Email</a>
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion.DireccionCompleta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAlta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaAlta)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
        <div class="row ml-4">
            <div class="col-md-6">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-primary btn-lg">Regresar a Lista</a>
                        <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


