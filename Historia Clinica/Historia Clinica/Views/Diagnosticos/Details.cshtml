@model Historia_Clinica.Models.Diagnostico

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/controladores.css" asp-append-version="true" />

<h3>Detalles del Diagnostico</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Epicrisis)
        </dt>
        <dd class = "col-sm-10" hidden>
            @Html.DisplayFor(model => model.Epicrisis.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recomendacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recomendacion)
        </dd>
    </dl>
</div>
<div class="text-right">
    @if (User.IsInRole(Config.EmpleadoRolName) || (User.IsInRole(Config.AdminRolName)))
    {
        <a asp-action="Edit" class="btn btn-primary btn-lg" asp-route-id="@Model?.Id">Editar</a>
    }
    <a asp-action="Index" class="btn btn-primary btn-lg" asp-route-epicrisisId="@Model.EpicrisisId">Volver a Lista</a>
</div>
