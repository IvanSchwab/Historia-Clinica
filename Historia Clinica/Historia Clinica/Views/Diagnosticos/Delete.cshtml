@model Historia_Clinica.Models.Diagnostico

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/controladores.css" asp-append-version="true" />

<h3>¿Desea descartar el siguiente Diagnostico?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Epicrisis)
        </dt>
        <dd class = "col-sm-10" hidden>
            @Html.DisplayFor(model => model.Epicrisis.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recomendacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recomendacion)
        </dd>
    </dl>
    <div class="row ml-4 col-md-6">
        <div class="col-md-6">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-primary btn-lg" asp-route-epicrisisId="@Model.EpicrisisId">Regresar a Lista</a>
                <button type="submit" value="Eliminar" class="btn btn-danger btn-lg">Eliminar</button>
            </form>
            </div>
        </div>
    </div>
