@model Historia_Clinica.Models.Nota

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/controladores.css" asp-append-version="true" />

<h3>Editar Nota</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Mensaje" class="control-label"></label>
                <textarea asp-for="Mensaje" class="form-control" style="height: 200px; resize: none;"></textarea>
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaYHora" class="control-label"></label>
                <input asp-for="FechaYHora" class="form-control" />
                <span asp-validation-for="FechaYHora" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="EmpleadoId" class="control-label"></label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId"></select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>
            <div class="form-group text-right" style="margin-right: 100px;">
                <br />
                <div class="btn-group ml-auto">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
                    <a asp-action="Index" class="btn btn-primary btn-lg">Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
