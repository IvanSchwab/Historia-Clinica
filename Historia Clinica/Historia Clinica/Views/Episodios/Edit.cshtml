@model Historia_Clinica.Models.Episodio

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/controladores.css" asp-append-version="true" />
@if (User.IsInRole(Config.MedicoRolName))
{
    <h3>Agregar Fecha de Alta</h3>
}
else
{
    <h3>Editar Episodio</h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @if (User.IsInRole(Config.MedicoRolName))
            {
                <div class="form-group">
                    <label asp-for="FechayHoraAlta" class="control-label"></label>
                    <input asp-for="FechayHoraAlta" class="form-control" />
                    <span asp-validation-for="FechayHoraAlta" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Motivo" class="control-label"></label>
                    <input asp-for="Motivo" class="form-control" />
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" style="height: 200px; resize: none;" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Motivo" class="control-label"></label>
                    <input asp-for="Motivo" class="form-control" />
                    <span asp-validation-for="Motivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" style="height: 200px; resize: none;" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            }
            <div class="form-group" hidden>
                <label asp-for="FechaYHoraInicio" class="control-label"></label>
                <input asp-for="FechaYHoraInicio" class="form-control" />
                <span asp-validation-for="FechaYHoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FechayHoraCierre" class="control-label"></label>
                <input asp-for="FechayHoraCierre" class="form-control" />
                <span asp-validation-for="FechayHoraCierre" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoAbierto" />
                </label>
            </div>
            <div class="form-group" hidden>
                <label asp-for="EmpleadoRegistra" class="control-label"></label>
                <input asp-for="EmpleadoRegistra" class="form-control" />
                <span asp-validation-for="EmpleadoRegistra" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="EmpleadoRegistraId" class="control-label"></label>
                <select asp-for="EmpleadoRegistraId" class="form-control" asp-items="ViewBag.EmpleadoRegistraId"></select>
                <span asp-validation-for="EmpleadoRegistraId" class="text-danger"></span>
            </div>
            <div class="form-group text-right" style="margin-right: 100px;">
                <br />
                <div class="btn-group ml-auto">
                    <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
                    <a asp-action="Index" class="btn btn-primary btn-lg" asp-route-Pacienteid="@Model.PacienteId">Regresar a Lista</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
