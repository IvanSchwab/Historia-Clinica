@model Historia_Clinica.Models.Epicrisis

@{
    ViewData["Title"] = "Edit";
}

<h3>Editar Epicrisis</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MedicoId" class="control-label">Médico</label>
                <select asp-for="MedicoId" class="form-control" asp-items="ViewBag.MedicoId"></select>
                <span asp-validation-for="MedicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaYHora" class="control-label"></label>
                <input asp-for="fechaYHora" class="form-control" />
                <span asp-validation-for="fechaYHora" class="text-danger"></span>
            </div>
            <div class="btn-group ml-auto">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg"  />
                <a asp-action="Index" class="btn btn-primary btn-lg" asp-route-episodioId="@Model.EpisodioId">Volver</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
