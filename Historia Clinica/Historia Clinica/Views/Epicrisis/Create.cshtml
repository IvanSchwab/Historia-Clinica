@model Historia_Clinica.Models.Epicrisis

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Epicrisis</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="fechaYHora" class="control-label"></label>
                <input asp-for="fechaYHora" class="form-control" />
                <span asp-validation-for="fechaYHora" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <input asp-for="MedicoId" hidden />
            </div>

            <div class="form-group" hidden>
                <input asp-for="EpisodioId" />
            </div>

            <br>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary btn-lg"> Crear </button>
                <a class="btn btn-primary btn-lg"  asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
